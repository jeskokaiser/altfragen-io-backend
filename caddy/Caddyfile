api.altfragen.io {

    @old_root not path /parser* /ai* /videos*
    handle @old_root {
        redir /parser{uri} 301
    }

    handle_path /parser* {
        reverse_proxy altfragen_parser:8000
    }

    handle_path /ai* {
        reverse_proxy altfragen_ai:8000
    }

    handle_path /videos* {
        root * /opt/videos
        file_server
    }
}
